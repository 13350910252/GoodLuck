<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".modeule.study.dialog.activity.MyCreateDialogActivity">
    <include
        android:visibility="gone"
        android:id="@+id/header_layout"
        layout="@layout/layout_header" />
    <Button
        android:text="点击出现弹窗"
        android:id="@+id/btn_dialog"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.example.goodluck.modeule.study.dialog.view.CustomDialogView
        android:id="@+id/cdv_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_one"
            android:alpha="0.7"
            android:background="@color/black_333333" />

        <com.example.goodluck.modeule.study.dialog.view.CustomDialogContentView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvtwo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="teset1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="teset2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="teset3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="teset4" />
            </LinearLayout>
        </com.example.goodluck.modeule.study.dialog.view.CustomDialogContentView>

    </com.example.goodluck.modeule.study.dialog.view.CustomDialogView>
</LinearLayout>