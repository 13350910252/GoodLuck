<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_common_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="@color/black_333333"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_dddddd" />

    <TextView
        android:id="@+id/tv_dialog_common_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="3"
        android:paddingStart="28dp"
        android:paddingTop="28dp"
        android:paddingEnd="28dp"
        android:paddingBottom="28dp"
        android:textColor="@color/black_333333"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_dialog_common_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/tv_dialog_common_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_red_radius8_bl_bg"
            android:gravity="center"
            android:text="确定"
            android:layout_marginEnd="12dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_marginStart="12dp"
            android:id="@+id/tv_dialog_common_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_gray_radius8_br_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>