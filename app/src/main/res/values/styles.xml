<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ItemDialog" parent="android:style/Theme.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnterAnimation">@anim/item_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/item_dialog_out</item>
    </style>
    <!--登录几面的输入框样式-->
    <style name="LoginEditText">
        <item name="android:colorControlNormal">@color/black_33ffffff</item>
        <item name="android:colorControlActivated">@color/white</item>
    </style>
</resources>
